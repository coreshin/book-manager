<div class="container">
    <div class="panel panel-default">
    	<div class="panel-heading header-grey">
    		<h4>新しく読んだ本</h4>
    	</div>
    	<div class="panel-body">
            <form action="/books" method="post">
                <div class="control">
                    <div class="form-group sentence">
                        <p><label>書名</label><input class="" type="text" name="title" placeholder=""></p>
                        <p><label>著者</label><input class="" type="text" name="author" placeholder=""></p>
                        <div class="row">
                            <div class="form-group col-sm-2"><label>読了日</label></div>
                            <div class="form-group col-sm-2">
                                <select class="year" name="year">
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-2">
                                <select class="month" name="month">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>>
                                </select>
                            </div>
                            <div class="form-group col-sm-2">
                                <select class="day" name="day">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                    <option value="13">13</option>
                                    <option value="14">14</option>
                                    <option value="15">15</option>
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="21">21</option>
                                    <option value="22">22</option>
                                    <option value="23">23</option>
                                    <option value="24">24</option>
                                    <option value="25">25</option>
                                    <option value="26">26</option>
                                    <option value="27">27</option>
                                    <option value="28">28</option>
                                    <option value="29">29</option>
                                    <option value="30">30</option>
                                    <option value="31">31</option>
                                </select>
                            </div>
                        </div>
                        <p class="rate"><label>評価(1~5)</label><small class="description">1</small><input class="input-range" type="range" min="1" max="5" name="rate"><small class="description">5</small></p>
                        <div class="form-group">
                            <span><label>コメント</label><input type="button" class="btn-outline-dark btn pull-right" onClick="clearText( )" value="クリア"></span>
                            <textarea class="comment" name="comment" id="comment" placeholder=""></textarea>
                        </div>
                        <p><label>ジャンル</label><select class="" name="list">
                            <% List.had_by(current_user).each do |list| %>
                                <option value="<%= list.id %>"><%= list.name %></option>
                            <% end %>
                        </select></p>
                    </div>
                    <footer class="form-footer">
                        <input type="reset" class="btn font-white back-black" value="リセット" ><input type="submit" class="btn font-white back-gray" value="登録"><a class="pull-right btn" href="/">戻る</a>
                    </footer>
                </div>
            </form>
        </div>
    </div>
</div>
<script language="JavaScript">
function clearText(){
     document.getElementById('comment').value = "";
};
</script>