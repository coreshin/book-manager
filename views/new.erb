<div class="container">
    <form action="/books" method="post">
        <div class="controls">
            <div class="form-group">
                <input class="form-control" type="text" name="title" placeholder="書名"><br>
                <input class="form-control" type="text" name="author" placeholder="著者名"><br>
                <input class="form-control" type="text" name="date" placeholder="読了日"><br>
                <input class="form-control" type="text" name="rate" placeholder="評価(1~5)"><br>
                <div class="form-group">
                    <textarea class="form-control" name="comment" placeholder="コメント"></textarea>
                </div>
                ジャンル:<select class="form-control" name="list">
                    <% List.all.each do |list| %>
                        <option value="<%= list.id %>"><%= list.name %></option>
                    <% end %>
                </select>
            </div>
            <div>
                <input type="submit" class="btn font-white back-gray" value="登録">
            </div>
        </div>
    </form>
</div>